{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
<div class="site-section bg-light">
    <div class="container">
        <div class="row justify-content-center  mb-5">
            <div class="col-md-7 text-center">
                <h3 class="karaH2 text-center">Liste des recettes</h3>
                <p class="mb-5 lead">Voici toutes les recettes</p>
                <!--
                <p class="text-center">
                    <a href="#" class="btn btn-primary custom-prev">Précédt</a>
                    <a href="#" class="btn btn-primary custom-next">Suivant</a>
                </p>
                -->
            </div>

        </div>
        <div class="row">
            {% for recette in recettes %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="post-entry-1 h-100">
                    <a href="single.html">
                        <img src="{{ imgs }}{{ recette.image }}" alt="Image"
                             class="img-fluid">
                    </a>
                    <div class="post-entry-1-contents">
                        <h2><a href="single.html">{{ recette.nom }}</a></h2>
                        {% if recette.temps < 60 %}
                        <span class="meta d-inline-block mb-3"> {{ recette.temps }} mn
                        {% else %}
                        <span class="meta d-inline-block mb-3"> {{ recette.temps/60 }} h
                        {% endif %}
                            <span class="mx-2">par</span><a href="#">{{ recette.autheur.alias }}</a></span>
                        <p>{{ recette.description }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
